@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">number of qubits: @currentCount</p>

@* <button class="button" @onclick="IncrementCount">Click me</button> *@

<div class="stepper">
    <button class="button stepper-button" @onclick="DecrementCount">-</button>
    <input type="number" 
           class="stepper-input" 
           value="@currentCount"
           @onchange="OnInputChange" />
    <button class="button stepper-button" @onclick="IncrementCount">+</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void OnInputChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int value))
        {
            currentCount = value;
        }
    }
}
